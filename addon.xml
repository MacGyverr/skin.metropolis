<?xml version="1.0" encoding="UTF-8"?>
<addon id="skin.metropolis" version="3.4.0" name="Metropolis (Krypton beta)" provider-name="Amra, Stoli, jingai">
	<requires>
		<import addon="xbmc.gui" version="5.11.0"/>
		<import addon="service.library.data.provider" version="0.1.5"/>
		<import addon="script.extendedinfo" version="4.5.1"/>
		<import addon="script.skinshortcuts" version="1.0.6"/>
		<import addon="resource.images.studios.white" version="0.0.5"/>
		<import addon="resource.images.languageflags.colour" version="0.0.4"/>
		<import addon="resource.images.weatherfanart.prairie" version="0.0.5"/>
		<import addon="resource.images.weathericons.outline" version="0.0.5"/>
		<import addon="resource.images.recordlabels.white" version="0.0.6"/>
	</requires>
	<extension point="xbmc.gui.skin" debugging="false">
		<res width="1280" height="720" aspect="16:9" folder="720p"/>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_US">A Mix of Retro and Modern.</summary>
		<description lang="en_US">Metropolis is designed to show as much media info as possible with easy to read text and icons. All while trying to keep the skin smooth and simple to use for all family members with multiple themes and customizable menus and views. Credit to Hitcher for Alaska Revisited which was used as a base for Metropolis.</description>
		<platform>all</platform>
