						<width>1260</width>
						<height>57</height>
						<align>left</align>
						<aligny>center</aligny>
						<texture>ButtonFO.png</texture>
						<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(3)">Conditional</animation>
