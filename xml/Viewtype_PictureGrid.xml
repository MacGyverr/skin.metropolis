<includes>
	<include name="Viewtype_PictureGrid">
		<control type="group">
			<visible>Control.IsVisible(500)</visible>
			<!-- Browser -->
			<control type="panel" id="500">
				<viewtype label="31293">icon</viewtype>
				<posx>1110</posx>
				<posy>75</posy>
				<width>744</width>
				<height>720</height>
				<onup>500</onup>
				<ondown>500</ondown>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<orientation>vertical</orientation>
				<preloaditems>3</preloaditems>
				<scrolltime>200</scrolltime>
				<pagecontrol>61</pagecontrol>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewPictureGrid)</visible>
				<itemlayout width="243" height="240">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>234</width>
						<height>234</height>
						<texture>list/listframe.png</texture>
					</control>
					<control type="image">
						<posx>27</posx>
						<posy>27</posy>
						<width>180</width>
						<height>180</height>
						<texture background="true" fallback="DefaultThumb.png" diffuse="list/listmatte.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout width="243" height="240">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>234</width>
						<height>234</height>
						<texture>list/listframe.png</texture>
						<animation reversible="false" effect="zoom" center="auto" start="100" end="130" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="false" effect="zoom" center="auto" start="130" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
					</control>
					<control type="image">
						<posx>27</posx>
						<posy>27</posy>
						<width>180</width>
						<height>180</height>
						<texture background="true" fallback="DefaultThumb.png" diffuse="list/listmatte.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<animation reversible="false" effect="zoom" center="auto" start="100" end="130" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="false" effect="zoom" center="auto" start="130" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
					</control>
				</focusedlayout>
			</control>
			<!-- Viewer -->
			<control type="group">
				<posx>0</posx>
				<posy>0</posy>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<!-- Picture (3:2 aspect viewing window on a 16:9 monitor) -->
				<control type="image">
					<posx>141</posx>
					<posy>170</posy>
					<width>837</width>
					<height>558</height>
					<texture>frames/ClassicFrame_Background.png</texture>
					<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>
				</control>
				<control type="image">
					<posx>141</posx>
					<posy>170</posy>
					<width>837</width>
					<height>558</height>
					<texture background="true">$INFO[ListItem.Thumb]</texture>
					<aspectratio scalediffuse="false">keep</aspectratio>
				</control>
				<control type="image">
					<posx>108</posx>
					<posy>138</posy>
					<width>906</width>
					<height>630</height>
					<texture>frames/ClassicFrame_FanartMedium.png</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
				</control>
			</control>
			<!-- Picture Info -->
			<control type="group">
				<posx>0</posx>
				<posy>0</posy>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<!-- Title -->
				<control type="label">
					<posx>142</posx>
					<posy>105</posy>
					<width>837</width>
					<height>45</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_TitleTextLarge</font>
					<textcolor>TitleText</textcolor>
					<label>$VAR[ListItemTitle]</label>
				</control>
				<control type="grouplist">
					<posx>142</posx>
					<posy>750</posy>
					<width>837</width>
					<height>45</height>
					<align>center</align>
					<orientation>horizontal</orientation>
					<!-- Picture Date and Time -->
					<control type="label">
						<width min="38" max="992">auto</width>
						<height>30</height>
						<font>METF_MediaDetailsSmall</font>
						<textcolor>MediaDetailsGenre</textcolor>
						<label>$INFO[ListItem.PictureDateTime]</label>
					</control>
					<!-- Bullet -->
					<control type="image">
						<include>ViewDetailsBulletSmall</include>
						<visible>!String.IsEmpty(ListItem.PictureDateTime) + [!String.IsEmpty(ListItem.PictureResolution) + !String.IsEqual(ListItem.PictureResolution, 0 x 0)]</visible>
					</control>
					<!-- Picture Resolution -->
					<control type="label">
						<width min="38" max="992">auto</width>
						<height>30</height>
						<font>METF_MediaDetailsSmall</font>
						<textcolor>MediaDetailsInfo</textcolor>
						<label>$INFO[ListItem.PictureResolution]</label>
						<visible>!String.IsEmpty(ListItem.PictureResolution) + !String.IsEqual(ListItem.PictureResolution, 0 x 0)</visible>
					</control>
				</control>
			</control>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
