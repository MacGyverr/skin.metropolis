<includes>
	<include name="Viewtype_Panel_Square">
		<control type="group">
			<visible>Control.IsVisible(559)</visible>
			<!-- Browser -->
			<control type="panel" id="559">
				<viewtype label="31298">icon</viewtype>
				<posx>660</posx>
				<posy>90</posy>
				<width>1230</width>
				<height>618</height>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<pagecontrol>61</pagecontrol>
				<preloaditems>2</preloaditems>
				<include>Animation_ZoomInZoomOut</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_OpenCloseFade</include>
				<visible>!Skin.HasSetting(NoViewPanelSquare)</visible>
				<visible>Window.IsActive(pictures) | Window.IsActive(programs) | Window.IsActive(videos) | Container.Content(Addons) | Container.Content(Albums) | Container.Content(Artists)</visible>
				<itemlayout width="308" height="308">
					<control type="image">
						<posx>38</posx>
						<posy>38</posy>
						<width>232</width>
						<height>232</height>
						<texture>frames/ClassicFrame_Background.png</texture>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
						<visible>!String.IsEqual(ListItem.Icon,-) + [!String.StartsWith(ListItem.Icon,default) | String.StartsWith(ListItem.Icon,defaultalbumcover)] + !String.IsEmpty(ListItem.Icon)</visible>
					</control>
					<control type="image">
						<posx>38</posx>
						<posy>38</posy>
						<width>232</width>
						<height>232</height>
						<texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
					</control>
					<control type="image">
						<posx>9</posx>
						<posy>6</posy>
						<width>288</width>
						<height>292</height>
						<texture>frames/ClassicFrame_SquareSmall.png</texture>
						<visible>!String.IsEqual(ListItem.Icon,-) + [!String.StartsWith(ListItem.Icon,default) | String.StartsWith(ListItem.Icon,defaultalbumcover)] + !String.IsEmpty(ListItem.Icon)</visible>
					</control>
				</itemlayout>
				<focusedlayout width="308" height="308">
					<control type="group">
						<animation reversible="true" effect="zoom" center="auto" start="100" end="120" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="true" effect="zoom" center="auto" start="120" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
						<control type="image">
							<posx>38</posx>
							<posy>38</posy>
							<width>232</width>
							<height>232</height>
							<texture>frames/ClassicFrame_Background.png</texture>
							<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
							<visible>!String.IsEqual(ListItem.Icon,-) + [!String.StartsWith(ListItem.Icon,default) | String.StartsWith(ListItem.Icon,defaultalbumcover)] + !String.IsEmpty(ListItem.Icon)</visible>
						</control>
						<control type="image">
							<posx>38</posx>
							<posy>38</posy>
							<width>232</width>
							<height>232</height>
							<texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">scale</aspectratio>
						</control>
						<control type="image">
							<posx>9</posx>
							<posy>6</posy>
							<width>288</width>
							<height>292</height>
							<texture>frames/ClassicFrame_SquareSmall.png</texture>
							<visible>!String.IsEqual(ListItem.Icon,-) + [!String.StartsWith(ListItem.Icon,default) | String.StartsWith(ListItem.Icon,defaultalbumcover)] + !String.IsEmpty(ListItem.Icon)</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
			<!-- Fanart Image -->
			<control type="group">
				<posx>45</posx>
				<posy>30</posy>
				<include>Animation_ZoomInZoomOut</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_FadedByMenu</include>
				<visible>!String.IsEqual(ListItem.Icon,-) + [!String.StartsWith(ListItem.Icon,default) | String.StartsWith(ListItem.Icon,defaultalbumcover)]</visible>
				<control type="image">
					<posx>30</posx>
					<posy>74</posy>
					<width>486</width>
					<height>273</height>
					<texture fallback="home_art/music.jpg">$INFO[ListItem.Art(fanart)]</texture>
					<aspectratio aligny="top" scalediffuse="false">stretch</aspectratio>
					<visible>Window.IsActive(music) | Window.IsActive(videos)</visible>
				</control>
				<control type="image">
					<posx>30</posx>
					<posy>74</posy>
					<width>486</width>
					<height>273</height>
					<texture fallback="home_art/pictures.jpg">$INFO[ListItem.Icon]</texture>
					<aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
					<visible>Window.IsActive(pictures)</visible>
				</control>
				<control type="image">
					<posx>30</posx>
					<posy>74</posy>
					<width>486</width>
					<height>273</height>
					<texture fallback="home_art/pictures.jpg">$INFO[ListItem.Art(fanart)]</texture>
					<aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
					<visible>Window.IsActive(pictures) + String.IsEmpty(ListItem.Icon)</visible>
				</control>
				<control type="image">
					<posx>30</posx>
					<posy>74</posy>
					<width>486</width>
					<height>273</height>
					<texture fallback="home_art/programs.jpg">$INFO[ListItem.Art(fanart)]</texture>
					<aspectratio aligny="top" scalediffuse="false">stretch</aspectratio>
					<visible>Container.Content(addons)</visible>
				</control>
				<control type="image">
					<posx>6</posx>
					<posy>45</posy>
					<width>537</width>
					<height>333</height>
					<texture>frames/ClassicFrame_FanartSmall.png</texture>
				</control>
			</control>
			<control type="group">
				<include>Animation_ZoomInZoomOut</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_OpenCloseFade</include>
				<posx>78</posx>
				<posy>396</posy>
				<visible>Window.IsActive(music)</visible>
				<!-- Album Genre -->
				<control type="label">
					<width>570</width>
					<height>40</height>
					<scroll>true</scroll>
					<scrollsuffix>   |   </scrollsuffix>
					<font>METF_TitleText</font>
					<textcolor>MediaDetailsGenre</textcolor>
					<label>$INFO[ListItem.Genre]</label>
					<visible>!String.IsEmpty(ListItem.Genre) + !Container.Content(artists)</visible>
				</control>
				<!-- Artist Genre -->
				<control type="label">
					<width>570</width>
					<height>40</height>
					<scroll>true</scroll>
					<scrollsuffix>   |   </scrollsuffix>
					<font>METF_TitleText</font>
					<textcolor>MediaDetailsGenre</textcolor>
					<label>$INFO[ListItem.Property(Artist_Genre)]</label>
					<visible>!String.IsEmpty(ListItem.Property(Artist_Genre)) + Container.Content(artists)</visible>
				</control>
				<!-- Year -->
				<control type="label">
					<posy>45</posy>
					<width>570</width>
					<height>40</height>
					<font>METF_MediaDetails</font>
					<textcolor>MediaDetailsYear</textcolor>
					<label>$INFO[ListItem.Year]</label>
					<visible>!String.IsEmpty(ListItem.Year) + [Container.Content(tvshows) | Container.Content(movies) | Container.Content(musicvideos) | Container.Content(albums) | Container.Content(songs)]</visible>
				</control>
			</control>
			<control type="group">
				<include>Animation_ZoomInZoomOut</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_OpenCloseFade</include>
				<posx>660</posx>
				<posy>742</posy>
				<!-- Title -->
				<control type="fadelabel">
					<width>1230</width>
					<height>45</height>
					<align>center</align>
					<aligny>center</aligny>
					<scrollout>false</scrollout>
					<pauseatend>600</pauseatend>
					<scrollspeed>20</scrollspeed>
					<font>METF_TitleTextLarge</font>
					<textcolor>TitleText</textcolor>
					<label>$VAR[ListItemTitle]</label>
				</control>
			</control>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
