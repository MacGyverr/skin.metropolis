<includes>
	<include name="Viewtype_Fanart">
		<control type="group">
			<visible>Control.IsVisible(504)</visible>
			<!-- Browser -->
			<control type="wraplist" id="504">
				<posx>30</posx>
				<posy>60</posy>
				<height>630</height>
				<width>1860</width>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnUp7000</include>
				<ondown>60</ondown>
				<onleft>504</onleft>
				<onright>504</onright>
				<viewtype label="20445">bigwrap</viewtype>
				<orientation>horizontal</orientation>
				<focusposition>1</focusposition>
				<scrolltime>200</scrolltime>
				<pagecontrol>60</pagecontrol>
				<include>Animation_FadedByMenu</include>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewFanart)</visible>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows)</visible>
				<itemlayout width="390" height="630">
					<control type="image">
						<posx>42</posx>
						<posy>90</posy>
						<width>306</width>
						<height>450</height>
						<texture background="true" fallback="DefaultThumb.png">$VAR[PosterThumb]</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>42</posx>
						<posy>90</posy>
						<width>306</width>
						<height>450</height>
						<texture>frames/ClassicFrameGlass_Vertical.png</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<colordiffuse>GlassDiffuse</colordiffuse>
						<visible>!String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>15</posx>
						<posy>58</posy>
						<width>366</width>
						<height>513</height>
						<texture>frames/ClassicFrame_PosterSmall.png</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!String.IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<posx>286</posx>
						<posy>478</posy>
						<width>48</width>
						<height>48</height>
						<fadetime>200</fadetime>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>!ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
					<!-- Watched Overlay for In-Progress Items -->
					<control type="image">
						<posx>280</posx>
						<posy>471</posy>
						<width>64</width>
						<height>64</height>
						<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
				</itemlayout>
				<focusedlayout width="1080" height="630">
					<control type="image">
						<posx>51</posx>
						<posy>46</posy>
						<width>969</width>
						<height>543</height>
						<texture>frames/ClassicFrame_SegmentedDiffuse.png</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
						<visible>!String.IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
					</control>
					<control type="image">
						<posx>51</posx>
						<posy>46</posy>
						<width>969</width>
						<height>543</height>
						<texture>frames/ClassicFrame_Background.png</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
						<visible>!String.IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
					</control>
					<control type="image">
						<posx>51</posx>
						<posy>46</posy>
						<width>969</width>
						<height>543</height>
						<texture fallback="home_art/movies.jpg" diffuse="frames/ClassicFrame_SegmentedDiffuse.png">$VAR[LandscapeFanart]</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!String.IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
					</control>
					<control type="image">
						<posx>51</posx>
						<posy>46</posy>
						<width>969</width>
						<height>543</height>
						<texture fallback="home_art/movies.jpg">$VAR[LandscapeFanart]</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!String.IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
					</control>
					<control type="image">
						<posx>14</posx>
						<posy>15</posy>
						<width>1050</width>
						<height>615</height>
						<texture>frames/ClassicFrame_Segmented.png</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!String.IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
					</control>
					<control type="image">
						<posx>14</posx>
						<posy>15</posy>
						<width>1050</width>
						<height>615</height>
						<texture>frames/ClassicFrame_FanartMedium.png</texture>
						<fadetime>200</fadetime>
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<visible>!String.IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
					</control>
					<control type="image">
						<posx>957</posx>
						<posy>528</posy>
						<width>48</width>
						<height>48</height>
						<fadetime>200</fadetime>
						<texture>$INFO[ListItem.Overlay]</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="484,272" start="70" end="100" time="400" tween="back" easing="out" />
							<effect type="fade" start="0" end="100" time="300" />
						</animation>
						<visible>!ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
					<!-- Watched Overlay for In-Progress Items -->
					<control type="image">
						<posx>951</posx>
						<posy>520</posy>
						<width>64</width>
						<height>64</height>
						<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
						<colordiffuse>WatchedOverlay</colordiffuse>
						<visible>ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="group">
				<posx>60</posx>
				<posy>664</posy>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_OpenCloseFade</include>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows)</visible>
				<!-- Title -->
				<control type="fadelabel">
					<posx>0</posx>
					<posy>0</posy>
					<width>1800</width>
					<height>75</height>
					<align>center</align>
					<aligny>center</aligny>
					<scrollout>false</scrollout>
					<pauseatend>600</pauseatend>
					<scrollspeed>20</scrollspeed>
					<font>METF_TitleTextLarge</font>
					<textcolor>TitleText</textcolor>
					<label>$VAR[ListItemTitle]</label>
				</control>
				<!-- Genre -->
				<control type="label">
					<posx>300</posx>
					<posy>54</posy>
					<width>1200</width>
					<height>45</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsGenre</textcolor>
					<label>$INFO[ListItem.Genre]</label>
					<visible>!String.IsEmpty(ListItem.Genre)</visible>
				</control>
				<control type="label">
					<posx>300</posx>
					<posy>54</posy>
					<width>1200</width>
					<height>45</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsGenre</textcolor>
					<label>$LOCALIZE[31313]</label>
					<include>VisibleIfMovieSet</include>
				</control>
			</control>
			<!-- Details -->
			<control type="grouplist">
				<posx>60</posx>
				<posy>760</posy>
				<width>1800</width>
				<height>45</height>
				<align>center</align>
				<itemgap>15</itemgap>
				<orientation>horizontal</orientation>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_OpenCloseFade</include>
				<include>ViewDetailsYearDurEpsUnwatched</include>
				<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
				<include>VisibleIfNotMovieSet</include>
			</control>
			<include>ScrollBar_Horizontal</include>
		</control>
	</include>
</includes>
