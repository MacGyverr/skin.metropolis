<includes>
	<include name="MediaInfo">
		<control type="group" id="9901">
			<include>Animation_FadedByMenu</include>
			<include>Animation_CommonFade</include>
			<visible>!String.IsEmpty(ListItem.Title)</visible>
			<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | String.Contains(Container.FolderPath,plugin)</visible>
			<include>VisibleIfNotMovieSet</include>
			<visible>![[Player.HasAudio | Player.HasVideo] + Skin.HasSetting(MediaOverlay)]</visible>
			<!-- Studio -->
			<control type="group">
				<posx>45</posx>
				<posy>825</posy>
				<width>240</width>
				<height>135</height>
				<control type="image">
					<width>168</width>
					<height>165</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture fallback="flags/default-studio.png">$VAR[Studio_Icons]</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<visible>!String.IsEmpty(ListItem.Studio)</visible>
				</control>
				<control type="image">
					<width>168</width>
					<height>165</height>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<texture>flags/default-studio.png</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<visible>String.IsEmpty(ListItem.Studio)</visible>
				</control>
				<control type="image">
					<posx>-21</posx>
					<posy>15</posy>
					<width>210</width>
					<height>135</height>
					<texture>flags/flag_frame.png</texture>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
				</control>
			</control>
			<control type="grouplist">
				<posx>27</posx>
				<posy>976</posy>
				<width>390</width>
				<height>93</height>
				<align>left</align>
				<itemgap>12</itemgap>
				<orientation>horizontal</orientation>
				<!-- MPAA Flag (or Game Platform when in Advanced Launcher addon) -->
				<control type="group">
					<width>87</width>
					<height>93</height>
					<control type="image">
						<include>MediaFlagsVarsSquare</include>
						<texture>$VAR[MediaFlag_MPAA]</texture>
						<colordiffuse>MediaFlagDiffuse</colordiffuse>
						<visible>!String.Contains(Container.FolderPath,advanced.launcher)</visible>
					</control>
					<control type="image">
						<include>MediaFlagsVarsSquare</include>
						<texture>special://skin/extras/games/platforms/$INFO[ListItem.Writer,,.png]</texture>
						<colordiffuse>MediaFlagDiffuse</colordiffuse>
						<visible>!String.IsEmpty(ListItem.Writer) + String.Contains(Container.FolderPath,advanced.launcher)</visible>
					</control>
					<control type="image">
						<posx>3</posx>
						<width>99</width>
						<height>81</height>
						<texture>flags/flag_framesquare.png</texture>
						<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
					</control>
				</control>
				<!-- Star Rating (or Game Genre when in Advanced Launcher addon) -->
				<control type="group">
					<width>87</width>
					<height>93</height>
					<control type="image">
						<include>MediaFlagsVarsSquare</include>
						<texture>Star.png</texture>
						<colordiffuse>RatingStarDiffuse</colordiffuse>
						<visible>!String.Contains(Container.FolderPath,advanced.launcher)</visible>
					</control>
					<control type="label">
						<include>MediaFlagsVarsSquare</include>
						<align>center</align>
						<aligny>center</aligny>
						<label>$VAR[MediaFlag_Rating]</label>
						<textcolor>MediaFlagDiffuse</textcolor>
						<font>METF_StarRating</font>
						<visible>!String.Contains(Container.FolderPath,advanced.launcher)</visible>
					</control>
					<control type="image">
						<include>MediaFlagsVarsSquare</include>
						<texture>special://skin/extras/games/genres/$INFO[ListItem.Genre,,.png]</texture>
						<colordiffuse>MediaFlagDiffuse</colordiffuse>
						<visible>!String.IsEmpty(ListItem.Genre) + String.Contains(Container.FolderPath,advanced.launcher)</visible>
					</control>
					<control type="image">
						<posx>3</posx>
						<width>99</width>
						<height>81</height>
						<texture>flags/flag_framesquare.png</texture>
						<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
					</control>
				</control>
				<control type="group">
					<visible>Skin.HasSetting(Show_IMDbMediaFlag)</visible>
					<!-- IMDb Top250 Flag -->
					<control type="group">
						<width>87</width>
						<height>93</height>
						<visible>!Skin.HasSetting(Show_VotesMediaFlagAlways) + [!String.IsEmpty(ListItem.Top250) + !String.StartsWith(ListItem.Top250,0)]</visible>
						<control type="image">
							<include>MediaFlagsVarsSquareHalfTop</include>
							<texture>flags/IMDB-Logo.png</texture>
							<colordiffuse>IMDbDiffuseTop250</colordiffuse>
						</control>
						<control type="label">
							<include>MediaFlagsVarsSquareHalfBottom</include>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Top250]</label>
							<textcolor>MediaFlagDiffuse</textcolor>
							<font>METF_DialogSmallBold</font>
						</control>
						<control type="image">
							<posx>3</posx>
							<width>99</width>
							<height>81</height>
							<texture>flags/flag_framesquare.png</texture>
							<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
						</control>
					</control>
					<!-- IMDb Votes Flag (if not in Top250) -->
					<control type="group">
						<width>87</width>
						<height>93</height>
						<visible>[Skin.HasSetting(Show_VotesMediaFlagAlways) | [String.IsEmpty(ListItem.Top250) | [!String.IsEmpty(ListItem.Top250) + String.StartsWith(ListItem.Top250,0)]]] + !String.IsEmpty(ListItem.Votes) + !String.StartsWith(ListItem.Votes,0)</visible>
						<control type="image">
							<include>MediaFlagsVarsSquareHalfTop</include>
							<texture>flags/IMDB-Logo.png</texture>
							<colordiffuse>IMDbDiffuseVotes</colordiffuse>
						</control>
						<control type="label">
							<include>MediaFlagsVarsSquareHalfBottom</include>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Votes]</label>
							<textcolor>MediaFlagDiffuse</textcolor>
							<font>METF_DialogVerySmallBold</font>
						</control>
						<control type="image">
							<posx>3</posx>
							<width>99</width>
							<height>81</height>
							<texture>flags/flag_framesquare.png</texture>
							<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
						</control>
					</control>
				</control>
			</control>
		</control>
	</include>
</includes>
