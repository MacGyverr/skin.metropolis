<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>50</views>
	<controls>
		<include>Global_Background</include>
		<control type="group">
			<description>Recordings group</description>
			<visible>Control.IsVisible(50)</visible>
			<control type="list" id="50">
				<posx>735</posx>
				<posy>135</posy>
				<width>1065</width>
				<height>651</height>
				<onleft>102</onleft>
				<onright>72</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<pagecontrol>72</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="60" width="1050">
					<control type="image">
						<description>Recording icon</description>
						<posx>15</posx>
						<posy>8</posy>
						<width>45</width>
						<height>45</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<description>Recording label</description>
						<posx>75</posx>
						<posy>0</posy>
						<width>945</width>
						<height>60</height>
						<align>left</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Label</info>
					</control>
					<control type="label">
						<description>Recording date label</description>
						<posx>1035</posx>
						<posy>0</posy>
						<width>750</width>
						<height>60</height>
						<align>right</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Date</info>
					</control>
				</itemlayout>
				<focusedlayout height="60" width="1050">
					<control type="image">
						<description>Focus selection</description>
						<width>1815</width>
						<height>60</height>
						<texture>ButtonFO.png</texture>
					</control>
					<control type="image">
						<description>Recording icon</description>
						<posx>15</posx>
						<posy>8</posy>
						<width>45</width>
						<height>45</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<description>Recording label</description>
						<posx>75</posx>
						<posy>0</posy>
						<width>945</width>
						<height>60</height>
						<align>left</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Label</info>
					</control>
					<control type="label">
						<description>Recording date label</description>
						<posx>1035</posx>
						<posy>0</posy>
						<width>750</width>
						<height>60</height>
						<align>right</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Date</info>
					</control>
				</focusedlayout>
			</control>
			<!-- XXX: fix -->
			<control type="scrollbar" id="72">
				<posx>1815</posx>
				<posy>120</posy>
				<width>38</width>
				<height>690</height>
				<texturesliderbackground></texturesliderbackground>
				<textureslidernibfocus>ScrollbarVnibFO.png</textureslidernibfocus>
				<onleft>50</onleft>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="group">
				<posx>120</posx>
				<posy>150</posy>
				<control type="image">
					<description>Recording icon</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>570</width>
					<height>405</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture fallback="DefaultVideoCover.png">$INFO[Container(50).ListItem.Icon]</texture>
				</control>
				<control type="label">
					<description>Recording title label</description>
					<posx>0</posx>
					<posy>435</posy>
					<width>570</width>
					<height>38</height>
					<scroll>true</scroll>
					<align>center</align>
					<aligny>center</aligny>
					<include>LiveTVLabel</include>
					<info>ListItem.Title</info>
				</control>
			</control>
			<!-- TV Channel Plot (Bottom) -->
			<include>LiveTVPlot</include>
		</control>
		<!-- Navigation Menu -->
		<control type="group">
			<include>Animation_NavMenu</include>
			<include>NavMenuBackground</include>
			<control type="grouplist" id="7000">
				<include>NavMenuCommon</include>
				<onback>50</onback>
				<onleft>50</onleft>
				<onright>50</onright>
				<include>PVR_NavMenu</include>
				<include>NavMenuListPlaying</include>
			</control>
		</control>
		<include>PVR_Headers</include>
		<include>Global_Weather</include>
		<include>Global_Time</include>
		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
	</controls>
</window>
