				<shadowcolor>black</shadowcolor>
				<scrollout>false</scrollout>
				<pauseatend>2000</pauseatend>
			</control>
			<control type="label">
				<description>Album Label</description>
				<posx>240</posx>
				<posy>105</posy>
				<height>45</height>
