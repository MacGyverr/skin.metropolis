<includes>
	<include name="Viewtype_Games_Tall">
		<control type="group">
			<visible>Control.IsVisible(950)</visible>
			<control type="group">
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_OpenCloseFade</include>
				<visible>String.Contains(Container.FolderPath,plugin)</visible>
				<!-- Browser label and flags -->
				<control type="group">
					<posx>735</posx>
					<posy>657</posy>
					<!-- Title -->
					<control type="fadelabel">
						<width>1200</width>
						<height>75</height>
						<aligny>center</aligny>
						<scrollout>false</scrollout>
						<pauseatend>600</pauseatend>
						<scrollspeed>20</scrollspeed>
						<font>METF_TitleTextLarge</font>
						<textcolor>TitleText</textcolor>
						<label>$VAR[ListItemTitle]</label>
					</control>
					<control type="grouplist">
						<posy>63</posy>
						<width>1800</width>
						<height>45</height>
						<itemgap>15</itemgap>
						<orientation>horizontal</orientation>
						<!-- Year -->
						<control type="label">
							<width min="38" max="1800">auto</width>
							<height>45</height>
							<aligny>center</aligny>
							<font>METF_MediaDetailsSmall</font>
							<textcolor>MediaDetailsYear</textcolor>
							<label>$INFO[ListItem.premiered]</label>
							<visible>!String.IsEmpty(ListItem.premiered) + String.Contains(Container.FolderPath,plugin)</visible>
						</control>
						<!-- Bullet -->
						<control type="image">
							<include>ViewDetailsBullet</include>
							<visible>![String.IsEmpty(ListItem.premiered) | String.IsEmpty(ListItem.studio)]</visible>
						</control>
						<!-- Duration -->
						<control type="label">
							<width min="38" max="1800">auto</width>
							<height>45</height>
							<aligny>center</aligny>
							<font>METF_MediaDetailsSmall</font>
							<textcolor>MediaDetailsDuration</textcolor>
							<label>$INFO[ListItem.studio]</label>
							<visible>!String.IsEmpty(ListItem.studio) + String.Contains(Container.FolderPath,plugin)</visible>
						</control>
						<!-- Bullet -->
						<control type="image">
							<include>ViewDetailsBullet</include>
							<visible>![String.IsEmpty(ListItem.studio) | String.IsEmpty(ListItem.Genre)]</visible>
						</control>
						<!-- Genre -->
						<control type="label">
							<width min="38" max="1800">auto</width>
							<height>45</height>
							<aligny>center</aligny>
							<font>METF_MediaDetailsSmall</font>
							<textcolor>MediaDetailsGenre</textcolor>
							<label>$INFO[ListItem.Genre]</label>
							<visible>!String.IsEmpty(ListItem.Genre)</visible>
						</control>
					</control>
				</control>
			</control>
			<!-- Browser -->
			<control type="wraplist" id="950">
				<viewtype label="31461">bigwrap</viewtype>
				<posx>-150</posx>
				<posy>60</posy>
				<height>750</height>
				<width>2250</width>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnUp7000</include>
				<ondown>60</ondown>
				<onleft>950</onleft>
				<onright>950</onright>
				<orientation>horizontal</orientation>
				<focusposition>1</focusposition>
				<scrolltime>200</scrolltime>
				<preloaditems>2</preloaditems>
				<pagecontrol>60</pagecontrol>
				<include>Animation_FadedByMenu</include>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewGames)</visible>
				<visible>String.Contains(Container.FolderPath,advanced.launcher)</visible>
				<itemlayout width="390" height="630">
					<control type="group">
						<posx>-45</posx>
						<posy>14</posy>
						<!-- Unfocused Item - Poster -->
						<control type="image">
							<posx>30</posx>
							<posy>32</posy>
							<width>354</width>
							<height>543</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Unfocused Item - Frame -->
						<control type="image">
							<posx>30</posx>
							<posy>32</posy>
							<width>354</width>
							<height>543</height>
							<texture>frames/ClassicFrameGlass_Vertical.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<colordiffuse>GlassDiffuse</colordiffuse>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Unfocused Item - Frame -->
						<control type="image">
							<width>428</width>
							<height>612</height>
							<texture>frames/ClassicFrame_PosterSmall.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Unfocused Item - Watched Overlay -->
						<control type="image">
							<posx>330</posx>
							<posy>512</posy>
							<width>48</width>
							<height>48</height>
							<fadetime>200</fadetime>
							<texture>$INFO[ListItem.Overlay]</texture>
							<colordiffuse>WatchedOverlay</colordiffuse>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="1545" height="630">
					<!-- Focused Item Poster -->
					<control type="group">
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="150,0" start="90" end="100" time="300" tween="sine" easing="inout" />
						</animation>
						<!-- Focused Item - Poster -->
						<control type="image">
							<posx>20</posx>
							<posy>44</posy>
							<width>435</width>
							<height>664</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<fadetime>200</fadetime>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Focused Item - Poster Frame -->
						<control type="image">
							<posx>-3</posx>
							<posy>12</posy>
							<width>482</width>
							<height>728</height>
							<fadetime>200</fadetime>
							<texture>frames/ClassicFrame_PosterMedium.png</texture>
							<aspectratio>stretch</aspectratio>
						</control>
					</control>
					<!-- Focused Item Fanart -->
					<control type="group">
						<posx>464</posx>
						<posy>15</posy>
						<control type="image">
							<posx>34</posx>
							<posy>32</posy>
							<width>969</width>
							<height>543</height>
							<texture>frames/ClassicFrame_SegmentedDiffuse.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!String.IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<control type="image">
							<posx>34</posx>
							<posy>32</posy>
							<width>969</width>
							<height>543</height>
							<texture>frames/ClassicFrame_Background.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!String.IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<control type="image">
							<posx>34</posx>
							<posy>32</posy>
							<width>969</width>
							<height>543</height>
							<texture fallback="home_art/games.jpg" diffuse="frames/ClassicFrame_SegmentedDiffuse.png">$INFO[ListItem.Art(fanart)]</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!String.IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<control type="image">
							<posx>34</posx>
							<posy>32</posy>
							<width>969</width>
							<height>543</height>
							<texture fallback="home_art/games.jpg">$INFO[ListItem.Art(fanart)]</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!String.IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<!-- Focused Item Segmented Fanart Frame -->
						<control type="image">
							<width>1050</width>
							<height>615</height>
							<texture>frames/ClassicFrame_Segmented.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!String.IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<!-- Focused Item Normal Fanart Frame -->
						<control type="image">
							<width>1050</width>
							<height>615</height>
							<texture>frames/ClassicFrame_FanartMedium.png</texture>
							<fadetime>200</fadetime>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!String.IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
			<include>ScrollBar_Horizontal</include>
		</control>
	</include>
</includes>
