<window>
	<defaultcontrol always="true">2</defaultcontrol>
	<controls>
		<include>Global_Background</include>
		<control type="group">
			<posy>-90</posy>
			<include>Animation_OpenCloseFade</include>
			<animation type="Conditional" condition="Window.IsActive(contextmenu) | Window.IsActive(yesnodialog) | Window.IsActive(progressdialog) | Window.IsActive(okdialog) | Window.IsActive(filebrowser)">
				<effect type="zoom" time="600" center="960,540" start="100" end="0" tween="cubic" easing="inout" />
				<effect type="fade" time="400" start="100" end="0" />
			</animation>
			<!-- Login Screen Toggle on Left -->
			<control type="image">
				<posx>0</posx>
				<posy>351</posy>
				<width>570</width>
				<height>57</height>
				<texture>ButtonFO.png</texture>
				<animation effect="fade" start="100" end="0" condition="!Control.HasFocus(4)">Conditional</animation>
			</control>
			<control type="radiobutton" id="4">
				<posx>24</posx>
				<posy>351</posy>
				<onright>2</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				<textoffsetx>135</textoffsetx>
				<height>57</height>
				<width>570</width>
				<align>right</align>
				<aligny>center</aligny>
				<radiowidth>120</radiowidth>
				<radioheight>82</radioheight>
				<texturefocus></texturefocus>
				<texturenofocus></texturenofocus>
				<textureradioonfocus>buttons/button_radio_on.png</textureradioonfocus>
				<textureradioonnofocus>buttons/button_radio_on.png</textureradioonnofocus>
				<textureradioofffocus>buttons/button_radio_off.png</textureradioofffocus>
				<textureradiooffnofocus>buttons/button_radio_off.png</textureradiooffnofocus>
				<textureradioondisabled colordiffuse="40FFFFFF">buttons/button_radio_on.png</textureradioondisabled>
				<textureradiooffdisabled colordiffuse="40FFFFFF">buttons/button_radio_off.png</textureradiooffdisabled>
				<font>METF_ContextValue</font>
				<textcolor>ButtonText</textcolor>
				<disabledcolor>TextDisabled</disabledcolor>
				<focusedcolor>ButtonText</focusedcolor>
				<selectedcolor>TextFO</selectedcolor>
				<pulseonselect>false</pulseonselect>
				<label>$LOCALIZE[20096]</label>
			</control>
			<control type="button" id="5">
				<texturenofocus></texturenofocus>
				<description>Auto Login</description>
				<posx>0</posx>
				<posy>414</posy>
				<onright>2</onright>
				<onup>4</onup>
				<ondown>4</ondown>
				<textoffsetx>112</textoffsetx>
				<height>57</height>
				<width>570</width>
				<align>right</align>
				<font>METF_ContextValue</font>
				<textcolor>ButtonText</textcolor>
				<disabledcolor>TextDisabled</disabledcolor>
				<focusedcolor>ButtonText</focusedcolor>
				<texturefocus>ButtonFO.png</texturefocus>
				<selectedcolor>TextFO</selectedcolor>
				<label>$LOCALIZE[31444]</label>
				<enable>!System.HasLoginScreen</enable>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>404</posy>
				<width>570</width>
				<height>15</height>
				<include>Settings_Line</include>
			</control>
			<control type="label">
				<description>Auto Login label</description>
				<posx>459</posx>
				<posy>483</posy>
				<height>57</height>
				<width>570</width>
				<align>right</align>
				<font>METF_ContextValue</font>
				<textcolor>SettingsTitle</textcolor>
				<label>$INFO[System.ProfileAutoLogin]</label>
				<visible>!System.HasLoginScreen</visible>
			</control>
			<!--
			<control type="image">
				<posx>440</posx>
				<posy>158</posy>
				<width>840</width>
				<height>38</height>
				<texture>ButtonFO.png</texture>
				<animation effect="fade" start="100" end="70" condition="True">Conditional</animation>
			</control>
			-->
			<control type="label">
				<description>Heading</description>
				<posx>690</posx>
				<posy>207</posy>
				<width>1200</width>
				<height>57</height>
				<font>METF_TitleTextLarge</font>
				<textcolor>SettingsTitle</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>20115</label>
			</control>
			<control type="list" id="2">
				<posx>675</posx>
				<posy>309</posy>
				<width>1260</width>
				<height>585</height>
				<onleft>4</onleft>
				<onright>4</onright>
				<onup>52</onup>
				<ondown>52</ondown>
				<itemlayout height="57" width="1215">
					<control type="label">
						<posx>15</posx>
						<width>1215</width>
						<height>57</height>
						<textcolor>SettingsDetail</textcolor>
						<font>METF_ContextValue</font>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="300" width="1215">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>300</width>
						<height>300</height>
						<fadetime>100</fadetime>
						<aspectratio align="center" aligny="center">scale</aspectratio>
						<texture fallback="settings/settings_profiles.png">$INFO[ListItem.Icon]</texture>
						<bordertexture border="8">frames/thumb_border_round2.png</bordertexture>
						<bordersize>4</bordersize>
					</control>
					<control type="image">
						<posx>338</posx>
						<posy>90</posy>
						<width>938</width>
						<height>57</height>
						<align>left</align>
						<aligny>center</aligny>
						<texture>ButtonFO.png</texture>
						<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(2)">Conditional</animation>
						<animation effect="slide" end="0,30" condition="String.IsEmpty(ListItem.Label2)">Conditional</animation>
					</control>
					<control type="label">
						<posx>368</posx>
						<posy>90</posy>
						<width>848</width>
						<height>57</height>
						<textcolor>ButtonText</textcolor>
						<font>METF_ContextValue</font>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="slide" end="0,30" condition="String.IsEmpty(ListItem.Label2)">Conditional</animation>
					</control>
					<control type="label">
						<posx>368</posx>
						<posy>168</posy>
						<width>848</width>
						<height>57</height>
						<textcolor>SettingsDetail</textcolor>
						<font>METF_ContextValue</font>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>
			</control>
		</control>
		<include>Global_ContextFilter</include>
		<include>Global_Weather</include>
		<include>Global_Time</include>
		<include>Global_MediaOverlay</include>
		<include>Setting_Heading</include>
		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
	</controls>
</window>
