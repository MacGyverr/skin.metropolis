<includes>
	<include name="Viewtype_BannerPoster">
		<control type="group">
			<visible>Control.IsVisible(510)</visible>
			<!-- Browser -->
			<control type="panel" id="510">
				<viewtype label="$LOCALIZE[31439]">bigwide</viewtype>
				<posx>624</posx>
				<posy>75</posy>
				<height>675</height>
				<width>1260</width>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onup>510</onup>
				<ondown>510</ondown>
				<onright>61</onright>
				<pagecontrol>61</pagecontrol>
				<orientation>vertical</orientation>
				<preloaditems>2</preloaditems>
				<scrolltime>200</scrolltime>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewBannerPoster)</visible>
				<visible>Window.IsActive(videos) + Container.Content(tvshows)</visible>
				<include>BannerViewCommon_Browser</include>
			</control>
			<control type="group">
				<posx>0</posx>
				<posy>-32</posy>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(videos) + Container.Content(tvshows)</visible>
				<!-- Poster Image  -->
				<control type="image">
					<posx>56</posx>
					<posy>122</posy>
					<width>450</width>
					<height>660</height>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<aspectratio scalediffuse="false">keep</aspectratio>
					<fadetime>200</fadetime>
					<visible>String.IsEmpty(ListItem.Title)</visible>
				</control>
				<control type="image">
					<posx>56</posx>
					<posy>122</posy>
					<width>450</width>
					<height>660</height>
					<texture background="true" fallback="DefaultThumb.png">$VAR[PosterThumb]</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<fadetime>200</fadetime>
					<visible>!String.IsEmpty(ListItem.Title)</visible>
				</control>
				<control type="image">
					<posx>30</posx>
					<posy>84</posy>
					<width>502</width>
					<height>735</height>
					<texture>frames/ClassicFrame_PosterMedium.png</texture>
					<fadetime>200</fadetime>
					<visible>!String.IsEmpty(ListItem.Title)</visible>
				</control>
				<!-- Title -->
				<control type="label">
					<posx>600</posx>
					<posy>794</posy>
					<width>1260</width>
					<height>45</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_TitleTextLarge</font>
					<textcolor>TitleText</textcolor>
					<label>$VAR[ListItemTitle]</label>
				</control>
			</control>
			<!-- Details -->
			<control type="grouplist">
				<posx>64</posx>
				<posy>765</posy>
				<width>435</width>
				<height>45</height>
				<align>center</align>
				<itemgap>15</itemgap>
				<orientation>horizontal</orientation>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>ViewDetailsYearDurEps</include>
				<visible>Window.IsActive(videos) + Container.Content(tvshows)</visible>
			</control>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
