<window>
	<defaultcontrol>1111</defaultcontrol>
	<animation type="WindowOpen" reversible="false">
		<effect type="slide" start="0,-150" end="0,0" time="300" />
		<effect type="fade" start="0" end="100" time="300" />
	</animation>
	<animation type="WindowClose" reversible="false">
		<effect type="slide" start="0,0" end="0,-150" time="300" />
		<effect type="fade" start="100" end="0" time="300" />
	</animation>
	<coordinates>
		<posx>-45</posx>
		<posy>-22</posy>
	</coordinates>
	<controls>
		<control type="button" id="1111">
			<texturefocus></texturefocus>
			<texturenofocus></texturenofocus>
			<posx>-15</posx>
			<posy>-15</posy>
			<height>1</height>
			<width>1</width>
			<onfocus>Skin.SetBool(LibraryUpdated)</onfocus>
		</control>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>-15</posy>
			<width>1650</width>
			<height>100</height>
			<texture>dialogs/DialogBG_DropdownWide2.png</texture>
			<colordiffuse>DialogDropdownColor</colordiffuse>
			<animation effect="slide" end="0,-225" time="200" condition="Window.IsVisible(FullscreenVideo) | Window.IsVisible(Visualisation) | Window.IsVisible(slideshow)">conditional</animation>
		</control>
		<control type="image">
			<description>Progress background</description>
			<posx>75</posx>
			<posy>36</posy>
			<width>262</width>
			<height>26</height>
			<texture>osd/osd_progress_back2.png</texture>
			<colordiffuse>DialogProgressBar</colordiffuse>
			<animation effect="slide" end="0,-225" time="200" condition="Window.IsVisible(FullscreenVideo) | Window.IsVisible(Visualisation) | Window.IsVisible(slideshow)">conditional</animation>
		</control>
		<control type="progress" id="32">
			<description>Progress Bar</description>
			<posx>75</posx>
			<posy>36</posy>
			<width>262</width>
			<height>26</height>
			<reveal>true</reveal>
			<texturebg>osd/osd_progress_back2.png</texturebg>
			<lefttexture>osd/osd_progress_left2.png</lefttexture>
			<midtexture>osd/osd_progress_mid2.png</midtexture>
			<righttexture>osd/osd_progress_right2.png</righttexture>
			<colordiffuse>DialogProgressBar</colordiffuse>
			<animation effect="slide" end="0,-225" time="200" condition="Window.IsVisible(FullscreenVideo) | Window.IsVisible(Visualisation) | Window.IsVisible(slideshow)">conditional</animation>
			<visible>!Window.IsActive(2006) + !VideoPlayer.IsFullscreen</visible>
		</control>
		<control type="grouplist">
			<posx>352</posx>
			<posy>24</posy>
			<width>1252</width>
			<height>45</height>
			<align>left</align>
			<itemgap>15</itemgap>
			<orientation>horizontal</orientation>
			<animation effect="slide" end="0,-225" time="200" condition="Window.IsVisible(FullscreenVideo) | Window.IsVisible(Visualisation) | Window.IsVisible(slideshow)">conditional</animation>
			<visible>!Window.IsActive(2006) + !VideoPlayer.IsFullscreen</visible>
			<control type="label" id="30">
				<description>Heading Label</description>
				<width min="38" max="1252">auto</width>
				<height>45</height>
				<aligny>center</aligny>
				<font>METF_DialogSmallBold</font>
				<textcolor>DialogTextFO</textcolor>
			</control>
			<control type="label" id="31">
				<label></label>
				<description>Line 1</description>
				<width min="38" max="1252">auto</width>
				<height>45</height>
				<aligny>center</aligny>
				<font>METF_DialogSmallBold</font>
				<textcolor>TextNF</textcolor>
			</control>
		</control>
	</controls>
</window>
