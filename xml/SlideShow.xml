<window>
	<coordinates>
		<posy>-34</posy>
	</coordinates>
	<controls>
		<!-- Slideshow paused -->
		<control type="group" id="13">
			<posx>1665</posx>
			<animation type="VisibleChange">
				<effect type="slide" start="0,-150" end="0,0" time="300" />
				<effect type="fade" start="0" end="100" time="300" />
			</animation>
			<control type="image">
				<width>1650</width>
				<height>98</height>
				<texture flipx="true">dialogs/DialogBG_DropdownWide2.png</texture>
				<colordiffuse>DialogDropdownColor</colordiffuse>
			</control>
			<control type="label">
				<posx>45</posx>
				<posy>36</posy>
				<width>210</width>
				<height>45</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>METF_DialogSmallBold</font>
				<textcolor>TextFO</textcolor>
				<label>112</label>
			</control>
			<visible>slideshow.ispaused</visible>
		</control>
		<!-- Picture info -->
		<control type="group">
			<animation type="VisibleChange">
				<effect type="slide" start="0,-150" end="0,0" time="300" />
				<effect type="fade" start="0" end="100" time="300" />
			</animation>
			<control type="image">
				<posx>-45</posx>
				<width>1650</width>
				<height>98</height>
				<texture>dialogs/DialogBG_DropdownWide2.png</texture>
				<colordiffuse>DialogDropdownColor</colordiffuse>
			</control>
			<control type="grouplist">
				<posx>15</posx>
				<posy>36</posy>
				<width>1650</width>
				<height>45</height>
				<align>left</align>
				<itemgap>15</itemgap>
				<orientation>horizontal</orientation>
				<control type="label">
					<width min="38" max="78">auto</width>
					<height>45</height>
					<aligny>center</aligny>
					<font>METF_DialogSmall</font>
					<textcolor>TitleText</textcolor>
					<label>$INFO[slideshow.slideindex]</label>
				</control>
				<control type="image">
					<include>ViewDetailsBullet</include>
					<visible>!String.IsEmpty(slideshow.filename)</visible>
				</control>
				<control type="label">
					<width min="38" max="933">auto</width>
					<height>45</height>
					<aligny>center</aligny>
					<font>METF_DialogSmallBold</font>
					<textcolor>MediaDetailsGenre</textcolor>
					<label>$INFO[slideshow.filename]</label>
				</control>
				<control type="image">
					<include>ViewDetailsBullet</include>
					<visible>!String.IsEmpty(slideshow.exiftime)</visible>
				</control>
				<control type="label">
					<width min="38" max="300">auto</width>
					<height>45</height>
					<aligny>center</aligny>
					<font>METF_DialogSmall</font>
					<textcolor>MediaDetailsYear</textcolor>
					<label>$INFO[slideshow.exiftime]</label>
				</control>
				<control type="image">
					<include>ViewDetailsBullet</include>
					<visible>!String.IsEmpty(slideshow.resolution) + !String.IsEqual(slideshow.resolution, 0 x 0)</visible>
				</control>
				<control type="label">
					<width min="38" max="180">auto</width>
					<height>45</height>
					<aligny>center</aligny>
					<font>METF_DialogSmall</font>
					<textcolor>MediaDetailsInfo</textcolor>
					<label>$INFO[slideshow.resolution]</label>
				</control>
			</control>
			<visible>Player.ShowInfo</visible>
		</control>
	</controls>
</window>
