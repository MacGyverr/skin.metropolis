<window>
	<defaultcontrol>3</defaultcontrol>
	<controls>
		<include>Global_Background</include>
		<control type="group">
			<animation type="Conditional" condition="Window.IsActive(yesnodialog) | Window.IsActive(progressdialog) | Window.IsActive(okdialog)">
				<effect type="zoom" time="600" center="960,540" start="100" end="50" tween="cubic" easing="inout" />
				<effect type="fade" time="400" start="100" end="0" />
			</animation>
			<control type="grouplist" id="3">
				<description>Button Area</description>
				<include>Animation_FadedByMenu</include>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_CommonFadeNoHide</include>
				<posx>0</posx>
				<posy>120</posy>
				<width>570</width>
				<height>684</height>
				<itemgap>0</itemgap>
				<scrolltime>0</scrolltime>
				<onleft>5</onleft>
				<onright>5</onright>
				<onup>20</onup>
				<ondown>3</ondown>
				<orientation>vertical</orientation>
			</control>
			<control type="grouplist" id="5">
				<description>Control Area</description>
				<include>Animation_FadedByMenu</include>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_CommonFadeNoHide</include>
				<posx>660</posx>
				<posy>120</posy>
				<width>1260</width>
				<height>684</height>
				<scrolltime>0</scrolltime>
				<itemgap>0</itemgap>
				<onleft>3</onleft>
				<onright>3</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				<orientation>vertical</orientation>
			</control>
			<control type="button" id="7">
				<description>Default Button</description>
				<include>SettingsLabel</include>
			</control>
			<control type="radiobutton" id="8">
				<description>Default Radio Button</description>
				<include>SettingsLabel</include>
			</control>
			<control type="spincontrolex" id="9">
				<description>Default Spin Control</description>
				<include>SettingsLabel</include>
				<textureupdisabled colordiffuse="40FFFFFF">ArrowUpNF.png</textureupdisabled>
				<texturedowndisabled colordiffuse="40FFFFFF">ArrowDownNF.png</texturedowndisabled>
			</control>
			<control type="button" id="10">
				<texturenofocus></texturenofocus>
				<description>Default Category Button</description>
				<width>555</width>
				<height>75</height>
				<textoffsetx>30</textoffsetx>
				<font>METF_TitleTextMedium</font>
				<textcolor>SettingsDetail</textcolor>
				<focusedcolor>DialogTextFO</focusedcolor>
				<align>right</align>
				<aligny>center</aligny>
				<texturefocus>ButtonFO.png</texturefocus>
				<alttexturefocus>ButtonFO.png</alttexturefocus>
				<alttexturenofocus></alttexturenofocus>
				<pulseonselect>false</pulseonselect>
			</control>
			<control type="sliderex" id="13">
				<description>Default Slider</description>
				<include>SettingsLabel</include>
				<sliderwidth>300</sliderwidth>
				<sliderheight>16</sliderheight>
				<texturesliderbar>osd/osdsliderback.png</texturesliderbar>
				<textureslidernib>osd/osdslidernib_2.png</textureslidernib>
				<textureslidernibfocus>osd/osdslidernib.png</textureslidernibfocus>
			</control>
			<control type="textbox" id="6">
				<include>Animation_FadedByMenu</include>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_HiddenByInfo</include>
				<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
				<posx>450</posx>
				<posy>848</posy>
				<width>1125</width>
				<height>96</height>
				<font>METF_PlotTextSmall</font>
				<include condition="!Skin.HasSetting(AutoScrollFast)">AutoScrollShort</include>
				<include condition="Skin.HasSetting(AutoScrollFast)">AutoScrollShortFast</include>
				<textcolor>LowerText</textcolor>
				<align>justify</align>
			</control>
			<control type="label" id="14">
				<label></label>
				<description>Default Label</description>
				<height>57</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>METF_ContextValue</font>
				<textcolor>SettingsDetail</textcolor>
			</control>
		</control>
		<include>Global_ContextFilter</include>
		<include>Global_Weather</include>
		<include>Global_Time</include>
		<include>Global_MediaOverlay</include>
		<include>Setting_Heading</include>
		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
	</controls>
</window>
