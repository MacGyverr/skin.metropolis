<includes>
	<include name="Viewtype_PosterAndFanart">
		<control type="group">
			<visible>Control.IsVisible(550)</visible>
			<!-- Browser -->
			<control type="wraplist" id="550">
				<viewtype label="31424">bigwrap</viewtype>
				<posx>-150</posx>
				<posy>60</posy>
				<height>750</height>
				<width>2250</width>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnUp7000</include>
				<ondown>60</ondown>
				<onleft>550</onleft>
				<onright>550</onright>
				<orientation>horizontal</orientation>
				<focusposition>1</focusposition>
				<scrolltime>200</scrolltime>
				<pagecontrol>60</pagecontrol>
				<include>Animation_FadedByMenu</include>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewPosterFanart)</visible>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows)</visible>
				<itemlayout width="390" height="630">
					<control type="group">
						<posx>-45</posx>
						<posy>15</posy>
						<!-- Unfocused Item - Poster -->
						<control type="image">
							<posx>32</posx>
							<posy>36</posy>
							<width>357</width>
							<height>538</height>
							<texture background="true" fallback="DefaultThumb.png">$VAR[PosterThumb]</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<control type="image">
							<posx>32</posx>
							<posy>36</posy>
							<width>357</width>
							<height>538</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">keep</aspectratio>
							<visible>String.IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Unfocused Item - Frame -->
						<control type="image">
							<posx>32</posx>
							<posy>36</posy>
							<width>357</width>
							<height>538</height>
							<texture>frames/ClassicFrameGlass_Vertical.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<colordiffuse>GlassDiffuse</colordiffuse>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<control type="image">
							<width>428</width>
							<height>612</height>
							<texture>frames/ClassicFrame_PosterSmall.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Unfocused Item - Watched Overlay -->
						<control type="image">
							<posx>324</posx>
							<posy>510</posy>
							<width>48</width>
							<height>48</height>
							<fadetime>400</fadetime>
							<texture>$INFO[ListItem.Overlay]</texture>
							<colordiffuse>WatchedOverlay</colordiffuse>
							<visible>!ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
						</control>
						<!-- Unfocused Item - Watched Overlay for In-Progress Items -->
						<control type="image">
							<posx>321</posx>
							<posy>507</posy>
							<width>64</width>
							<height>64</height>
							<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
							<colordiffuse>WatchedOverlay</colordiffuse>
							<visible>ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="1545" height="630">
					<!-- Focused Item Poster -->
					<control type="group">
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="150,0" start="86" end="100" time="250" tween="sine" easing="inout" delay="150" />
						</animation>
						<!-- Focused Item - Poster -->
						<control type="image">
							<posx>18</posx>
							<posy>48</posy>
							<width>429</width>
							<height>648</height>
							<texture background="true" fallback="DefaultThumb.png">$VAR[PosterThumb]</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<control type="image">
							<posx>18</posx>
							<posy>48</posy>
							<width>429</width>
							<height>648</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">keep</aspectratio>
							<visible>String.IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Focused Item - Poster Frame -->
						<control type="image">
							<posx>-8</posx>
							<posy>12</posy>
							<width>482</width>
							<height>720</height>
							<texture>frames/ClassicFrame_PosterMedium.png</texture>
							<aspectratio>stretch</aspectratio>
							<visible>!String.IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Focused Item - Watched Overlay -->
						<control type="image">
							<posx>386</posx>
							<posy>633</posy>
							<width>48</width>
							<height>48</height>
							<fadetime>400</fadetime>
							<texture>$INFO[ListItem.Overlay]</texture>
							<colordiffuse>WatchedOverlay</colordiffuse>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
						</control>
						<!-- Focused Item - Watched Overlay for In-Progress Items -->
						<control type="image">
							<posx>380</posx>
							<posy>627</posy>
							<width>64</width>
							<height>64</height>
							<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
							<colordiffuse>WatchedOverlay</colordiffuse>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
						</control>
					</control>
					<!-- Focused Item Fanart -->
					<control type="group">
						<posx>464</posx>
						<posy>15</posy>
						<control type="image">
							<posx>34</posx>
							<posy>32</posy>
							<width>969</width>
							<height>543</height>
							<texture>frames/ClassicFrame_SegmentedDiffuse.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
							<visible>!String.IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<control type="image">
							<posx>34</posx>
							<posy>32</posy>
							<width>969</width>
							<height>543</height>
							<texture>frames/ClassicFrame_Background.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
							<visible>!String.IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<control type="image">
							<posx>38</posx>
							<posy>32</posy>
							<width>969</width>
							<height>543</height>
							<texture fallback="home_art/movies.jpg" diffuse="frames/ClassicFrame_SegmentedDiffuse.png">$VAR[LandscapeFanart]</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!String.IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<control type="image">
							<posx>38</posx>
							<posy>32</posy>
							<width>969</width>
							<height>543</height>
							<texture fallback="home_art/movies.jpg">$VAR[LandscapeFanart]</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!String.IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<!-- Focused Item Segmented Fanart Frame -->
						<control type="image">
							<width>1050</width>
							<height>615</height>
							<texture>frames/ClassicFrame_Segmented.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!String.IsEmpty(ListItem.Title) + !Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
						<!-- Focused Item Normal Fanart Frame -->
						<control type="image">
							<width>1050</width>
							<height>615</height>
							<texture>frames/ClassicFrame_FanartMedium.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!String.IsEmpty(ListItem.Title) + Skin.HasSetting(NoSegmentedFanart)</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="group">
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_OpenCloseFade</include>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows)</visible>
				<control type="group">
					<posx>735</posx>
					<posy>657</posy>
					<!-- Title -->
					<control type="fadelabel">
						<width>1140</width>
						<height>75</height>
						<aligny>center</aligny>
						<scrollout>false</scrollout>
						<pauseatend>400</pauseatend>
						<font>METF_TitleTextLarge</font>
						<textcolor>TitleText</textcolor>
						<label>$VAR[ListItemTitle]</label>
					</control>
					<!-- Details -->
					<control type="grouplist">
						<posy>63</posy>
						<width>1800</width>
						<height>45</height>
						<itemgap>15</itemgap>
						<orientation>horizontal</orientation>
						<include>ViewDetailsGenreYearDurEpsUnwatched</include>
						<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
						<include>VisibleIfNotMovieSet</include>
					</control>
					<control type="label">
						<posy>63</posy>
						<width>1200</width>
						<height>45</height>
						<font>METF_MediaDetailsSmall</font>
						<textcolor>MediaDetailsGenre</textcolor>
						<label>$LOCALIZE[31313]</label>
						<include>VisibleIfMovieSet</include>
					</control>
				</control>
			</control>
			<include>ScrollBar_Horizontal</include>
		</control>
	</include>
</includes>
