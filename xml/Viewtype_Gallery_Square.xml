<includes>
	<include name="Viewtype_Gallery_Square">
		<control type="group">
			<visible>Control.IsVisible(58)</visible>
			<!-- Browser -->
			<control type="panel" id="58">
				<viewtype label="$LOCALIZE[31414] $LOCALIZE[31415]">icon</viewtype>
				<posx>38</posx>
				<posy>98</posy>
				<width>1845</width>
				<height>615</height>
				<scrolltime>200</scrolltime>
				<orientation>vertical</orientation>
				<onup>58</onup>
				<ondown>58</ondown>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnLeft7000</include>
				<onright>61</onright>
				<pagecontrol>61</pagecontrol>
				<preloaditems>2</preloaditems>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewGallerySquare)</visible>
				<visible>Window.IsActive(pictures) | Window.IsActive(programs) | Window.IsActive(videos) | Container.Content(Addons) | Container.Content(Albums) | Container.Content(Artists) | Container.Content(musicvideos) | String.Contains(Container.FolderPath,plugin)</visible>
				<itemlayout width="308" height="308">
					<control type="image">
						<posx>38</posx>
						<posy>38</posy>
						<width>232</width>
						<height>232</height>
						<texture>frames/ClassicFrame_Background.png</texture>
						<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
						<visible>!String.IsEqual(ListItem.Icon,-) + [!String.StartsWith(ListItem.Icon,default) | String.StartsWith(ListItem.Icon,defaultalbumcover)] + !String.IsEmpty(ListItem.Icon)</visible>
					</control>
					<control type="image">
						<posx>38</posx>
						<posy>38</posy>
						<width>232</width>
						<height>232</height>
						<texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">keep</aspectratio>
						<visible>Container.Content(musicvideos) + !Skin.HasSetting(CropMVGalleryIcon)</visible>
					</control>
					<control type="image">
						<posx>38</posx>
						<posy>38</posy>
						<width>232</width>
						<height>232</height>
						<texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<visible>!Container.Content(musicvideos) | Skin.HasSetting(CropMVGalleryIcon)</visible>
					</control>
					<control type="image">
						<posx>9</posx>
						<posy>6</posy>
						<width>288</width>
						<height>292</height>
						<texture>frames/ClassicFrame_SquareSmall.png</texture>
						<visible>!String.IsEqual(ListItem.Icon,-) + [!String.StartsWith(ListItem.Icon,default) | String.StartsWith(ListItem.Icon,defaultalbumcover)] + !String.IsEmpty(ListItem.Icon)</visible>
					</control>
				</itemlayout>
				<focusedlayout width="308" height="308">
					<control type="group">
						<animation reversible="false" effect="zoom" center="auto" start="100" end="120" time="200" tween="sine" easing="inout">focus</animation>
						<animation reversible="false" effect="zoom" center="auto" start="120" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
						<control type="image">
							<posx>38</posx>
							<posy>38</posy>
							<width>232</width>
							<height>232</height>
							<texture>frames/ClassicFrame_Background.png</texture>
							<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
							<visible>!String.IsEqual(ListItem.Icon,-) + [!String.StartsWith(ListItem.Icon,default) | String.StartsWith(ListItem.Icon,defaultalbumcover)] + !String.IsEmpty(ListItem.Icon)</visible>
						</control>
						<control type="image">
							<posx>38</posx>
							<posy>38</posy>
							<width>232</width>
							<height>232</height>
							<texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">keep</aspectratio>
							<visible>Container.Content(musicvideos) + !Skin.HasSetting(CropMVGalleryIcon)</visible>
						</control>
						<control type="image">
							<posx>38</posx>
							<posy>38</posy>
							<width>232</width>
							<height>232</height>
							<texture background="true" fallback="DefaultThumb.png">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<visible>!Container.Content(musicvideos) | Skin.HasSetting(CropMVGalleryIcon)</visible>
						</control>
						<control type="image">
							<posx>9</posx>
							<posy>6</posy>
							<width>288</width>
							<height>292</height>
							<texture>frames/ClassicFrame_SquareSmall.png</texture>
							<visible>!String.IsEqual(ListItem.Icon,-) + [!String.StartsWith(ListItem.Icon,default) | String.StartsWith(ListItem.Icon,defaultalbumcover)] + !String.IsEmpty(ListItem.Icon)</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="group">
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<posx>60</posx>
				<posy>708</posy>
				<!-- Title -->
				<control type="label">
					<width>1800</width>
					<height>60</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>METF_TitleTextLarge</font>
					<textcolor>TitleText</textcolor>
					<label>$VAR[ListItemTitle]</label>
					<include>Animation_OpenCloseFade</include>
					<include>Animation_FadedByMenu</include>
					<include>Animation_HiddenByInfo</include>
				</control>
				<!-- Details -->
				<control type="grouplist">
					<posy>50</posy>
					<width>1800</width>
					<height>45</height>
					<align>center</align>
					<itemgap>15</itemgap>
					<orientation>horizontal</orientation>
					<include>Animation_OpenCloseFade</include>
					<include>Animation_FadedByMenu</include>
					<include>Animation_HiddenByInfo</include>
					<include>ViewDetailsGenreYearDurEpsUnwatched</include>
					<visible>!Window.IsActive(pictures)</visible>
				</control>
			</control>
			<include>ScrollBar_Vertical</include>
		</control>
	</include>
</includes>
