					<midtexture>osd/osd_progress_mid2.png</midtexture>
					<righttexture>osd/osd_progress_right2.png</righttexture>
					<colordiffuse>DialogProgressBar</colordiffuse>
					<info>player.volume</info>
				</control>
				<control type="label">
					<posx>450</posx>
					<posy>15</posy>
					<width>120</width>
					<height>68</height>
					<textcolor>TextFO</textcolor>
					<align>right</align>
					<aligny>center</aligny>
					<font>METF_DialogSmall</font>
					<info>player.volume</info>
				</control>
			</control>
			<!-- If Audio Volume is controlled by external device -->
			<control type="group">
				<visible>player.passthrough</visible>
				<control type="label">
					<posx>108</posx>
					<posy>15</posy>
					<width>300</width>
					<height>68</height>
					<textcolor>TextFO</textcolor>
					<align>left</align>
					<aligny>center</aligny>
					<font>METF_DialogSmall</font>
					<label>$LOCALIZE[29802]</label>
					<wrapmultiline>true</wrapmultiline>
				</control>
			</control>
		</control>
		<control type="group">
			<animation type="WindowOpen" reversible="false">
				<effect type="slide" start="0,-150" end="0,0" time="300" />
				<effect type="fade" start="0" end="100" time="300" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="slide" start="0,0" end="0,-150" time="300" />
