<window>
	<controls>
		<control type="group">
			<animation type="WindowOpen" reversible="false">
				<effect type="slide" start="0,-150" end="0,0" time="300" />
				<effect type="fade" start="0" end="100" time="300" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="slide" start="0,0" end="0,-150" time="300" />
				<effect type="fade" delay="1000" start="100" end="0" time="300" />
			</animation>
			<visible>!Player.Muted</visible>
			<posx>1446</posx>
			<posy>-22</posy>
			<!-- Background Panel -->
			<control type="image">
				<description>background image</description>
				<posx>8</posx>
				<posy>-8</posy>
				<width>1650</width>
				<height>105</height>
				<texture flipx="true">dialogs/DialogBG_DropdownWide2.png</texture>
				<colordiffuse>DialogDropdownColor</colordiffuse>
			</control>
			<control type="image">
				<description>Volume Icon</description>
				<posx>54</posx>
				<posy>28</posy>
				<width>45</width>
				<height>45</height>
				<aspectratio>keep</aspectratio>
				<texture>dialogs/Dialog_VolumeIcon.png</texture>
			</control>
			<!-- If Audio Volume is controlled by Kodi -->
			<control type="group">
				<visible>!player.passthrough</visible>
				<control type="progress" id="404">
					<description>Progressbar</description>
					<posx>99</posx>
					<posy>39</posy>
