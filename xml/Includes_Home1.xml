			<control type="multiimage">
				<posx>360</posx>
				<posy>75</posy>
				<width>1200</width>
				<height>675</height>
				<timeperimage>5000</timeperimage>
				<randomize>true</randomize>
				<fadetime>500</fadetime>
				<imagepath background="true">$VAR[Weather_Fanart]</imagepath>
