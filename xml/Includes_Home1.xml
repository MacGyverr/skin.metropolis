				<visible>!Player.HasVideo</visible>
				<visible>String.IsEqual(Container(9000).ListItem.Property(background),home\weather\)</visible>
				<visible allowhiddenfocus="true">Skin.HasSetting(HomeStretchBackgrounds)</visible>
